
mod std::conc::Thread

use std::internal::conc::Thread::*

target c {
    pub proc new(task) = {
        handle = internal_spawn(task),

        notify = |self| {
            internal_notify(self.handle)
            return self
        },

        join = |self| {
            internal_join(self.handle)
            return self
        }
    }

    pub proc wait() = internal_wait()

    pub proc sleep(time) = internal_sleep(time)
}